<!DOCTYPE html>
<html>
<head>
    <title>Color generator</title>
    <style>
        body {
            height: 100vh;
            width: 100vw;

            margin: 0;
        }
        .colors {
            height: 100vh;
            width: 100vw;

            display: flex;
            flex-direction: row;
        }
        .color {
            height: 100%;
            width:20%;

            display: flex;
            flex-direction: column;

            justify-content: flex-end;
            align-items: center;


            text-align: center;
        }

        .color-interaction {
            display: flex;
            flex-direction: column;
        }
        .color-hex {
            font-family: "Gill Sans MT", serif;
            font-size: 2em;
            font-weight: bold;

            -webkit-font-smoothing: antialiased;
        }
        .color-name {
            font-family: Inter,sans-serif;
            font-size: 1em;
        }

    </style>
</head>
<body>

<div class="colors">
    {{range $id, $color := .colors}}
        <div class="color" id=""{{$id}} style="background-color: #{{$color.Value}}">
            <div class="color-interaction">
                <button>OK</button>
                <button>KO</button>
            </div>
            <div class="color-hex">{{$color.Value}}</div>
            <div class="color-name">{{$color.Name}}</div>
        </div>
    {{end}}
</div>

<script>
    const colors = document.querySelectorAll('.color');
    colors.forEach(item => {
        item.addEventListener('mouseover', () => {
            console.log('mouseover');
            item.querySelector('.color-interaction').style.visibility = 'visible';
        });
        item.addEventListener('mouseleave', () => {
            item.querySelector('.color-interaction').style.display = 'hidden';
        });
    })
</script>
</body>
</html>
